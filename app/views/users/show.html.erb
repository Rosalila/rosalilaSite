<div class="users">
	<% @current_user = current_user %>
	<% if @current_user %>
		<%= link_to "Edit Profile", edit_user_url(:username => @current_user.username) %>
	<% end %>
	<p><b>Username: </b><%= @user.username %></p>
	<p><b>Bio: </b><%= @user.bio %></p>
	<p><b>Email: </b><%= @user.email %></p>
</div>
